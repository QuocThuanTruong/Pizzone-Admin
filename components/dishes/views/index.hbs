<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Manage dishes</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0);">Manage dishes</a></li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div>
            <!-- end page-title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <div class="row p-3">
                                <div class="col-lg-3">
                                    <form role="search" class="email-inbox" method="GET" action="/manage-dishes">
                                        <div class="form-group mb-0">
                                            <input type="text" class="form-control rounded" placeholder="Search your dishes.." name="key_name">
                                            <button type="submit"><i class="fa fa-search"></i></button>
                                        </div>
                                    </form>

                                </div>

                                <div class="col-lg-7">
                                    <!-- filter here -->
                                    <div class="row">
                                        <p class="col-sm-3 found-search-item col-form-label ">Found <strong>{{totalResult}}</strong> items</p>

                                        <p class="found-search-item col-form-label">Categories</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control" id="category_option" onchange="changeCategory()">
                                                {{#if isPizzaSelected}}
                                                    <option selected>Pizza</option>
                                                {{else}}
                                                    <option>Pizza</option>
                                                {{/if}}
                                                {{#if isDrinkSelected}}
                                                    <option selected>Drink</option>
                                                {{else}}
                                                    <option>Drink</option>
                                                {{/if}}
                                                {{#if isSideSelected}}
                                                    <option selected>Side</option>
                                                {{else}}
                                                    <option>Side</option>
                                                {{/if}}
                                            </select>
                                        </div>

                                        <p class="found-search-item col-form-label">Sort by</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control">
                                                <option>Date</option>
                                                <option>Name</option>
                                                <option>High price</option>
                                                <option>Low price</option>
                                            </select>
                                        </div>

                                        <p class="found-search-item col-form-label">Shown items</p>
                                        <div class="col-sm-auto">
                                            <select class="form-control" id="total_dish_per_page">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="btn-toolbar float-lg-right form-group mb-0" role="toolbar">
                                        <div class="">
                                            <a href="/manage-dishes/add" class="btn btn-info waves-effect waves-light  m-r-5" role="button"><i class="fas fa-plus"></i> <i></i> <span>Add Pizza</span> </a>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="table-responsive">
                                <table class="table table-striped mb-0">
                                    <thead>
                                    <tr class="bg-primary">
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Sub category</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#each dishes}}
                                        <tr>
                                            <th scope="row">{{dish_id}}</th>
                                            <td>{{name}}</td>
                                            <td>{{categoryName}}</td>
                                            <td>{{subCategoryName}}</td>
                                            <td>{{price}}</td>
                                            <!-- binding bage info -->
                                            <td><span class="badge badge-info">{{statusName}}</span></td>
                                            <td>
                                                <div class="btn-toolbar form-group mb-0">
                                                    <div class="">
                                                        <a href="/manage-dishes/update/{{id}}" role="button" class="btn btn-success waves-effect waves-light m-r-5"><i class="far fa-edit"></i></a>
                                                        <button type="button" class="btn btn-danger waves-effect waves-light m-r-5 delete-modal-dialog" data-toggle="modal" data-target="#alertDeleteModal" onclick="getID('{{id}}')">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {{/each}}
                                    </tbody>
                                </table>

                               {{> deleteWarningModal}}
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>

            {{{render_pagination category page totalPage}}}
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->

    <footer class="footer">
        Â© 2020 Pizzone <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign</span>.
    </footer>
</div>
