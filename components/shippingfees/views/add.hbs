    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Add shipping fee</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Manage shipping fees</a></li>
                            <li class="breadcrumb-item active">Add</li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div>
            <!-- end page-title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Điền đầy đủ thông tin của phí vận chuyển cần thêm</h4>
                            <!-- Form -->
                            <form method="POST" action="/manage-shipping-fees/add">
                                <div class="form-group">
                                    <label>Giới hạn dưới</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                        <input type="number" class="form-control" required placeholder="Số tiền tối thiểu" name="min-price" id="name" min="0" max="10000000"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Giới hạn trên</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                        <input type="number" class="form-control" required placeholder="Số tiền tối đa" name="max-price" id="name" min="0" max="10000000"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Phí vận chuyển</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                        <input type="number" class="form-control" required placeholder="Phí vận chuyển" name="fee" id="name" min="0" max="10000000"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">
                                            Thêm
                                        </button>

                                        <a href="/manage-shipping-fees">
                                            <button type="button" class="btn btn-secondary waves-effect m-l-5">
                                                Bỏ qua
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
        </div>
        <!-- container-fluid -->
