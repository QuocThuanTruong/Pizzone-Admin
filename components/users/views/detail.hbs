<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">User profile</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Manage users</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0);">Profile</a></li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div>
            <!-- end page-title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <!-- Form -->
                            <form onsubmit="return false">
                                <div class="form-group col-sm-2 img-picker-container">
                                    <label>Ảnh đại diện</label>
                                    <div>
                                        {{#if account.active}}
                                            <div class="locked-bagde"><h5><span class="badge badge-success">ACTIVE</span>
                                            </h5></div>
                                        {{else}}
                                            <div class="locked-bagde"><h5><span
                                                    class="badge badge-danger">LOCKED</span></h5></div>
                                        {{/if}}
                                        <img style="height: 200px; background-size: cover !important;" src="{{linkAvatar account.avatar}}"
                                             data-holder-rendered="true">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Họ và tên</label>
                                    <input type="text" class="form-control" readonly placeholder="Họ và tên" name="name"
                                           id="name" value="{{account.name}}"/>
                                </div>

                                <div class="form-group">
                                    <label>Email</label>

                                    <input type="text" class="form-control" readonly placeholder="Email" name="email"
                                           id="email" value="{{account.email}}"/>
                                </div>

                                <div class="form-group">
                                    <label>Số điện thoại</label>

                                    <input type="text" class="form-control" readonly placeholder="Số điện thoại"
                                           name="phone" id="phone" value="{{account.phone}}"/>
                                </div>

                                <div class="form-group">
                                    <label>Địa chỉ</label>

                                    <input type="text" class="form-control" readonly placeholder="Địa chỉ"
                                           name="address" id="address" value="{{account.address}}"/>
                                </div>

                                <div class="form-group">
                                    <div>
                                        {{#unless account.isAdmin}}
                                            {{#unless account.active}}
                                                <button type="button" class="btn btn-success waves-effect waves-light" onclick="unlockAccount({{account.user_id}})">
                                                    Mở khóa người dùng này
                                                </button>
                                            {{else}}
                                                <button type="button" class="btn btn-danger waves-effect waves-light" onclick="lockAccount({{account.user_id}})">
                                                    Khóa người dùng này
                                                </button>
                                            {{/unless}}
                                            <a href="/manage-users">
                                                <button type="button" class="btn btn-secondary waves-effect m-l-5">
                                                    Bỏ qua
                                                </button>
                                            </a>
                                        {{/unless}}
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->

    <footer class="footer">
        © 2020 Pizzone <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign</span>.
    </footer>
</div>